<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".CalculatorActivity">


  <LinearLayout
    android:layout_width="368dp"
    android:layout_height="321dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.498">
    <TextView
      android:id="@+id/tvInstructions"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/instructions"
      android:textAlignment="center"
      android:textSize="18sp"/>
    <EditText
      android:id="@+id/txtTempInput"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:inputType="numberDecimal"
      android:textSize="30sp"/>
    <LinearLayout
      android:id="@+id/lvOptions"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <RadioGroup
        android:id="@+id/grpOptionsFrom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="50">
        <RadioButton
          android:id="@+id/radioFarenheitFrom"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/farenheit"/>
        <RadioButton
          android:id="@+id/radioCelsiusFrom"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/celsius"/>
        <RadioButton
          android:id="@+id/radioKelvinFrom"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/kelvin"/>
      </RadioGroup>
      <RadioGroup
        android:id="@+id/grpOptionsTo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="50">
        <RadioButton
          android:id="@+id/radioFarenheitTo"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/farenheit"/>
        <RadioButton
          android:id="@+id/radioCelsiusTo"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/celsius"/>
        <RadioButton
          android:id="@+id/radioKelvinTo"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/kelvin"/>
      </RadioGroup>

    </LinearLayout>
    <Button
      android:id="@+id/convertBtn"
      android:layout_width="fill_parent"
      android:layout_height="98dp"
      android:layout_weight="50"
      android:text="@string/convertBtn"/>
  </LinearLayout>
</android.support.constraint.ConstraintLayout>