<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".CalculatorActivity">


  <LinearLayout
    android:layout_width="368dp"
    android:layout_height="228dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.498">
    <TextView
      android:id="@+id/tvInstructions"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Please enter the temperature you want to convert and select the unit:"
      android:textAlignment="center"
      android:textSize="18sp"/>
    <EditText
      android:id="@+id/txtTempInput"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="30sp"/>
    <LinearLayout
      android:id="@+id/lvOptions"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
      <Button
        android:id="@+id/button"
        android:layout_width="fill_parent"
        android:layout_height="98dp"
        android:layout_weight="50"
        android:text="Convert"/>
      <RadioGroup
        android:id="@+id/grpOptions"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="50">
        <RadioButton
          android:id="@+id/radioFarenheit"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Farenheit (F°)"/>
        <RadioButton
          android:id="@+id/radioCelsius"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Celsius (C°)"/>
        <RadioButton
          android:id="@+id/radioKelvin"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Kelvin (K°)"/>
      </RadioGroup>

    </LinearLayout>
  </LinearLayout>
</android.support.constraint.ConstraintLayout>